FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir uv

# Copy the entire project
COPY . .

# Install dependencies from unified pyproject.toml
RUN uv sync --dev

# Debug: Check if credentials file exists after copy
RUN ls -la /app/ && \
    if [ -f /app/credentials.json ]; then \
        echo "✓ credentials.json found, size: $(stat -f%z /app/credentials.json 2>/dev/null || stat -c%s /app/credentials.json) bytes"; \
    else \
        echo "✗ credentials.json not found"; \
    fi

# Build arguments
ARG MCP_PORT
ENV MCP_PORT=${MCP_PORT}

# Debug: Print port values
RUN echo "MCP_PORT: ${MCP_PORT}"

# Expose the MCP port
EXPOSE ${MCP_PORT}

# Change to mcp_server directory and run the MCP server
WORKDIR /app/mcp_server
# Set PORT environment variable for the MCP server to use
CMD sh -c "export PORT=${PORT:-${MCP_PORT}} && uv run python main.py"
